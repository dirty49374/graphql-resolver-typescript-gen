{
  "compilerOptions": {
    "importHelpers": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es6", "esnext", "es2015"],
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "strict": false
  },
  "exclude": ["node_modules", "test", "dist", "generated", "visitor-plugin-common"]

}
